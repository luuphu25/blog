<div class= 'col-sm-6 col-lg-4'>
    <div class="card">
      <div class="card-block">
        <h4 class="card title"><%= link_to article.title, article %></h4>
        <p class="card-text"><%= @markdown.render(article.body).html_safe %> </p>
        <% link_to 'Read more', article, class: 'btn btn-read' %>
      </div>
      <div clas="card-footer">
        <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
        <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %>
        </div>
    </div>
  </div>
